<div class="container" align="center">
<h1> New gossip </h1>
<br>
<p align="left"> <%= link_to('Back to all gossips', gossips_path,class: "btn btn-success") %> </p> 
<br>
<%= form_for :gossips do |f| %>
 

  <div class="field">
    <%= f.label :Your_gossip_here %><br />
